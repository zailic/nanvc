{
    "name": "nanvc",
    "description": "Not Another Node Vault Client :)",
    "version": "1.0.15",
    "author": {
        "name": "Ionut Zailic",
        "email": "ionut@zailic.com"
    },
    "contributors": [],
    "keywords": [
        "hashicorp",
        "vault",
        "consul",
        "aws",
        "secrets",
        "manage",
        "client"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/zailic/nanvc.git"
    },
    "homepage": "https://github.com/zailic/nanvc",
    "bugs": {
        "url": "https://github.com/zailic/nanvc/issues"
    },
    "license": "MIT",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "test:unit": "mocha -r ts-node/register test/unit/**/*.ts",
        "test:all": "mocha -r ts-node/register test/unit/**/*.ts test/integration/**/*.ts",
        "coverage": "nyc npm run test:all",
        "build": "rimraf ./dist/* && tsc",
        "lint": "eslint './src/**/*.ts'"
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "exclude": [
            "test/**/*.ts",
            "test/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "got": "11.8.2",
        "tv4": "1.3.0"
    },
    "devDependencies": {
        "@testdeck/mocha": "0.2.0",
        "@types/chai": "4.3.0",
        "@types/got": "9.6.12",
        "@types/mocha": "9.0.0",
        "@types/sinon": "10.0.6",
        "@types/tv4": "1.2.31",
        "@typescript-eslint/eslint-plugin": "5.8.1",
        "@typescript-eslint/parser": "5.8.1",
        "chai": "4.3.4",
        "eslint": "8.5.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.25.3",
        "mocha": "9.1.3",
        "nyc": "15.1.0",
        "rimraf": "3.0.2",
        "sinon": "12.0.1",
        "ts-node": "10.4.0",
        "typescript": "4.5.4"
    }
}