{
    "name": "nanvc",
    "description": "Not Another Node Vault Client :)",
    "version": "1.0.14",
    "author": {
        "name": "Ionut Zailic",
        "email": "ionut@zailic.com"
    },
    "contributors": [],
    "keywords": [
        "hashicorp",
        "vault",
        "consul",
        "aws",
        "secrets",
        "manage",
        "client"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/zailic/nanvc.git"
    },
    "homepage": "https://github.com/zailic/nanvc",
    "bugs": {
        "url": "https://github.com/zailic/nanvc/issues"
    },
    "license": "MIT",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "test:unit": "mocha -r ts-node/register test/unit/**/*.ts",
        "test:all": "mocha -r ts-node/register test/unit/**/*.ts test/integration/**/*.ts",
        "coverage": "nyc npm run test:all",
        "build": "rimraf ./dist/* && tsc",
        "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
        "tslint": "tslint -c ./tslint.json './src/**/*.ts'"
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "exclude": [
            "test/**/*.ts",
            "test/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "engines": {
        "node": ">=6"
    },
    "dependencies": {
        "request": "2.88.2",
        "request-promise-native": "1.0.8",
        "tv4": "1.3.0",
        "@types/tv4": "1.2.29",
        "@types/request-promise-native": "1.0.17"
    },
    "devDependencies": {
        "@types/chai": "4.2.11",
        "@types/mocha": "8.0.0",
        "@types/sinon": "9.0.4",
        "chai": "4.2.0",
        "coveralls": "3.1.0",
        "mocha": "8.0.1",
        "mocha-typescript": "1.1.17",
        "nyc": "15.1.0",
        "rimraf": "3.0.2",
        "sinon": "9.0.2",
        "ts-node": "8.10.2",
        "tslint": "5.20.1",
        "typescript": "3.9.6"
    }
}
